<!-- ./views/edit.handlebars -->
<form action="/restaurants/{{{restaurant.id}}}/edit" method="POST">
  <div>
    <input type="text" placeholder="name" name="name" value="{{{restaurant.name}}}">
  </div>

  <div>
    <input type="text" placeholder="english name" name="name_en" value="{{{restaurant.name_en}}}">
  </div>

  <div>
    <input type="text" placeholder="category" name="category" value="{{{restaurant.category}}}">
  </div>

  <div>
    <input type="text" placeholder="location" name="location" value="{{{restaurant.location}}}">
  </div>

  <div>
    <input type="text" placeholder="phone-number" name="phone" value="{{{restaurant.phone}}}">
  </div>

  <div>
    <input type="text" placeholder="description" name="description" value="{{{restaurant.description}}}">
  </div>

  <div>
    <input type="text" placeholder="googlemap link" name="google_map" value="{{{restaurant.google_map}}}">
  </div>

  <div>
    <input type="text" placeholder="image link" name="image" value="{{{restaurant.image}}}">
  </div>

  <div>
    <input type="text" placeholder="rating score" name="rating" value="{{{restaurant.rating}}}">
  </div>

  <button type="submit">Edit</button>
</form>